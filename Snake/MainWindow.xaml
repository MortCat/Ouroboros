<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake Game" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="203*"/>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Snake Game" FontSize="30" Margin="10" Grid.ColumnSpan="2" />

        <Canvas Grid.Row="1" Background="WhiteSmoke" Margin="10" Grid.ColumnSpan="2">
            <!-- Add snake, food and obstacles elements here -->
        </Canvas>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="25,10,10,9" Grid.Column="1" Width="151">
            <Button Content="Start" Margin="10" Click="StartButton_Click" />
            <Button Content="Pause" Margin="10" Click="PauseButton_Click" />
            <Button Content="Exit" Margin="10" Click="ExitButton_Click" />
        </StackPanel>
    </Grid>
</Window>
